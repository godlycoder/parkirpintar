<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/head_color">
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="160px"
            android:layout_height="160px"
            android:layout_gravity="center"
            android:src="@drawable/park"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/main_text_color"
            android:text="MASUK"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20px"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_email_login"
                android:layout_width="343px"
                android:layout_height="wrap_content"
                android:textSize="20px"
                android:fontFamily="@font/biryani_extralight"
                android:hint="Email"
                android:textColor="@color/main_text_color"
                android:textColorHint="@color/main_text_color"
                android:backgroundTint="@color/main_text_color"
                />

            <EditText
                android:id="@+id/et_password_login"
                android:layout_width="343px"
                android:layout_height="wrap_content"
                android:textSize="20px"
                android:fontFamily="@font/biryani_extralight"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColorHint="@color/main_text_color"
                android:textColor="@color/main_text_color"
                android:backgroundTint="@color/main_text_color"
                />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/bt_masuk"
            android:layout_below="@+id/main_head_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33px"
            android:layout_width="343px"
            android:layout_height="70px"
            android:background="@drawable/rounded_white_button">

            <ProgressBar
                android:id="@+id/pb_login_btn"
                android:layout_margin="15px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:indeterminateDrawable="@drawable/blue_progress_bar"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tv_login_btn"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20px"
                android:textColor="@color/head_color"
                android:fontFamily="@font/biryani_extrabold"
                android:text="Masuk"/>
        </RelativeLayout>


        <TextView
            android:layout_marginTop="20px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text_color"
            android:layout_gravity="center_horizontal"
            android:text="Anda belum memiliki akun?"/>

        <TextView
            android:id="@+id/tv_daftar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/main_text_color"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:text="Daftar"/>


    </LinearLayout>

</RelativeLayout>